<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:focusableInTouchMode="true"
    tools:context="com.example.android.smart_home.Pairing_Screen">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:src="@drawable/sihlogo"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="140dp"/>

        <TextView
            android:id="@+id/paring_code"
            android:layout_width="400dp"
            android:layout_height="90dp"
            android:layout_below="@+id/logo"
            android:textColor="#000"


            android:text="Pairing Code"
            android:textSize="40sp"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:layout_marginLeft="90dp"/>

        <com.airbnb.lottie.LottieAnimationView

            android:id="@+id/ok"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            android:layout_below="@id/paring_code"
            android:layout_marginLeft="200dp"
            app:lottie_fileName="checked_loading.json"

            />
        <VideoView
            android:id="@+id/video_view"
            android:layout_width="1dp"
            android:layout_height="1dp"
           />

        <TextView
            android:id="@+id/sync"
            android:layout_width="500dp"
            android:layout_height="90dp"
            android:text="Synchronizing with Connected Devices.It may take few Moments!"
            android:layout_marginTop="350dp"
            android:textSize="26sp"
            android:visibility="invisible"
            android:layout_marginLeft="100dp"/>

        <LinearLayout
            android:id="@+id/pair_code_layout"
            android:layout_width="600dp"
            android:layout_height="100dp"
            android:layout_below="@+id/paring_code"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"

            android:focusableInTouchMode="true">

            <EditText
                android:id="@+id/et1"
                android:layout_width="100dp"
                android:layout_height="90dp"

                android:inputType="number"
                android:textStyle="bold"
                android:layout_marginLeft="40dp"
                android:textSize="50sp"

                android:hint=" --"/>
            <EditText
                android:id="@+id/et2"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:inputType="number"

                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:textSize="50sp"

                android:hint=" --"/>
            <EditText
                android:id="@+id/et3"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginLeft="15dp"
                android:inputType="number"

                android:textStyle="bold"
                android:textSize="50sp"

                android:hint=" --"/>
            <EditText
                android:id="@+id/et4"
                android:layout_width="100dp"
                android:layout_height="90dp"

                android:textStyle="bold"
                android:inputType="number"
                android:layout_marginLeft="15dp"
                android:textSize="50sp"

                android:hint=" --"/>
            <EditText
                android:id="@+id/et5"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:textColor="#706363"

                android:textStyle="bold"
                android:textSize="50sp"
                android:inputType="number"
                android:layout_marginLeft="15dp"
                android:maxLength="2"

                android:hint=" --"/>



        </LinearLayout>

        <TextView
            android:id="@+id/splitter"
            android:layout_width="2dp"
            android:layout_height="400dp"
            android:layout_marginTop="70dp"
            android:background="#374d9c"
            android:layout_toRightOf="@id/logo"
            android:layout_marginLeft="200dp"

             />

        <TextView
            android:id="@+id/ins"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/logo"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="100dp"
            android:text="Instructions"
            android:textSize="30sp"
            android:textColor="#000"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt"
            android:textSize="20sp"
            android:layout_below="@id/ins"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/logo"
            android:text="1. Register your details\n2. Enter the passcode in the smart display\n3. Now your mobile gets synced with the smart display "/>


        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textSize="25sp"-->
            <!--android:id="@+id/txt2"-->
            <!--android:layout_below="@id/ins"-->
            <!--android:layout_marginLeft="300dp"-->
            <!--android:layout_marginTop="100dp"-->
            <!--android:layout_toRightOf="@id/logo"-->
            <!--android:text=" 2. Enter the passcode in the smart display"/>-->


        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/txt3"-->
            <!--android:textSize="25sp"-->
            <!--android:layout_below="@id/ins"-->
            <!--android:layout_marginLeft="500dp"-->
            <!--android:layout_marginTop="90dp"-->
            <!--android:layout_toRightOf="@id/logo"-->
            <!--android:text=" 3. Now your mobile gets synced with the smart display "/>-->


        <ImageView
            android:layout_width="450dp"
            android:layout_height="160dp"
            android:layout_below="@id/ins"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="170dp"
            android:layout_toRightOf="@id/logo"
            android:src="@drawable/smart"/>









    </RelativeLayout>






</android.support.constraint.ConstraintLayout>
