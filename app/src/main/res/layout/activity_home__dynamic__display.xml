            >

            <android.support.v7.widget.CardView
                android:id="@+id/water_heater"
                android:layout_width="300dp"
                android:layout_height="140dp"
                card_view:cardBackgroundColor="#33197e"





                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                >

                <LinearLayout
                    android:id="@+id/water_heater_lay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:background="#ffffff"

                    android:orientation="horizontal">
                    <!--<VideoView-->
                        <!--android:id="@+id/water_heater_video_view"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:visibility="invisible"-->
                        <!--/>-->

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Water Heater"
                            android:textColor="#000"

                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:textSize="16sp"
                            />

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/heater1"
                            android:layout_marginTop="10dp"
                            />




                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/timer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Timer : 30.00"

                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:textSize="18sp"


                                />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="30dp"
                                android:layout_gravity="right|end"

                                android:layout_marginLeft="35dp"
                                android:src="@drawable/ecologo"
                                android:layout_marginTop="1dp"
                                />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hot water is getting ready."

                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"

                            android:layout_gravity="center_horizontal"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="20dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:scaleType="centerCrop"
                                android:layout_height="40dp"
                                android:layout_gravity="left"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/temp"
                                android:layout_marginTop="1dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="120Â°"
                                android:textColor="#2c309b"

                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="10dp"
                                android:textSize="28sp"
                                android:textAlignment="textEnd"
                                android:layout_gravity="end"
                                />


                        </LinearLayout>




                    </LinearLayout>




                </LinearLayout>




            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:id="@+id/iron_box"


                android:layout_toRightOf="@id/water_heater"
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:background="#004D40"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                card_view:cardBackgroundColor="#33197e"
                >

                <LinearLayout
                    android:id="@+id/iron_box_lay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ef4343"
                    android:layout_margin="3dp"

                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Iron Box"

                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="#000"
                            android:layout_gravity="left"

                            android:textSize="16sp"
                            />
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:layout_gravity="right"
                            android:layout_marginLeft="40dp"
                            android:src="@drawable/ecologo"
                            android:layout_marginTop="1dp"
                            />



                    </LinearLayout>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="65dp"
