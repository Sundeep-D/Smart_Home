            android:textStyle="bold"
            android:textColor="#DD2C00"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="45dp" />

        <ImageView
            android:id="@+id/up_arrow"
            android:layout_width="70dp"
            android:layout_height="70dp"
